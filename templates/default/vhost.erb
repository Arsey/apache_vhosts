<VirtualHost *:80>
   ServerName <%= @params[:server_name] %>
   <%= "ServerAlias #{@params[:server_alias]}" if @params[:server_alias]%>
   <%= "ServerAdmin #{@params[:server_email]}" if @params[:server_email]%>
   
   DocumentRoot <%= @params[:docroot] %>
    
   <Directory <%= @params[:docroot] %>>
      Options Indexes FollowSymLinks MultiViews
      AllowOverride ALL
      Order allow,deny
      Allow from all
   </Directory>
  
   ErrorLog ${APACHE_LOG_DIR}/<%= @params[:server_name] %>.log
   LogLevel debug
</VirtualHost>